<p id="notice"><%= notice %></p>

<h1>Listing Options</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td width="200"><%= option.name %></td>
        <td width="100"><%= option.status %></td>
        <td><%= link_to 'Edit', edit_admin_option_path(option) %></td>
        <td><%= link_to 'Destroy', [:admin, option], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

